{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FileEmbeddings",
    "type": "object",
    "required": [
        "schema_version",
        "model_name",
        "model_version",
        "generated_at",
        "embeddings"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "model_name": {
            "type": "string"
        },
        "model_version": {
            "type": "string"
        },
        "generated_at": {
            "type": "string"
        },
        "embeddings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "file_path",
                    "hash",
                    "chunk_index",
                    "total_chunks",
                    "embedding"
                ],
                "properties": {
                    "file_path": {
                        "type": "string"
                    },
                    "hash": {
                        "type": "string"
                    },
                    "chunk_index": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "total_chunks": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "embedding": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}