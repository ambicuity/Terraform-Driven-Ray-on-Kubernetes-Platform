{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DependencyGraph",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "dependencies"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "generated_at": {
            "type": "string"
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "source",
                    "target",
                    "type",
                    "depth"
                ],
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "direct_import",
                            "transitive_import",
                            "terraform_module_ref",
                            "helm_dependency",
                            "ci_uses_script"
                        ]
                    },
                    "depth": {
                        "type": "integer",
                        "minimum": 1
                    }
                }
            }
        }
    },
    "additionalProperties": false
}