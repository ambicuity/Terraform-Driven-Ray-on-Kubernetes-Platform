{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ModuleMap",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "modules"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "generated_at": {
            "type": "string"
        },
        "modules": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "path",
                    "type",
                    "files"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "python_package",
                            "terraform_module",
                            "helm_chart",
                            "rego_policy",
                            "ci_workflow",
                            "docs"
                        ]
                    },
                    "files": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "description": {
                        "type": "string"
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "exports": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}